# Database Configuration
# Choose: sqlite or mongodb
DB_TYPE=sqlite

# SQLite Configuration (when DB_TYPE=sqlite)
SQLITE_PATH=./db/mockserver.db

# MongoDB Configuration (when DB_TYPE=mongodb)  
MONGODB_URL=mongodb://localhost:27017
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net
# For Docker: mongodb://admin:password123@localhost:27017/mockserver?authSource=admin
DB_NAME=mockserver

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
CONSOLE_LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=104857600
# Max file size in bytes (100MB default)